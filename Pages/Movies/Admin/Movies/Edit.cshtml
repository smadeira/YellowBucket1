@page
@model YellowBucket1.Pages.Movies.EditModel

@{
    ViewData["Title"] = "Edit Movie";
}
@{ 
                 var genres = Model.Movies.MoviesGenres.Select(m => m.Genres.Name);
}
<h1>Edit</h1>

<h4>Movies</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Movies.ID" />
            <div class="form-group">
                <label asp-for="Movies.Title" class="control-label"></label>
                <input asp-for="Movies.Title" class="form-control" />
                <span asp-validation-for="Movies.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Genre</label>
                <select class="form-control" asp-for="GenresID" asp-items="@(new SelectList(Model.Genres, "ID", "Name"))"></select>
                <span asp-validation-for="Movies.MoviesGenres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.ReleaseDate" class="control-label"></label>
                <input asp-for="Movies.ReleaseDate" class="form-control" />
                <span asp-validation-for="Movies.ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Rating</label>
                <select class="form-control" asp-for="Movies.Rating">
                    <option>Please select rating</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG13">PG13</option>
                    <option value="R">R</option>
                </select>
                <span asp-validation-for="Movies.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.Price" class="control-label"></label>
                <input asp-for="Movies.Price" class="form-control" />
                <span asp-validation-for="Movies.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.Description" class="control-label"></label>
                <input asp-for="Movies.Description" class="form-control" />
                <span asp-validation-for="Movies.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies.Length" class="control-label"></label>
                <input asp-for="Movies.Length" class="form-control" />
                <span asp-validation-for="Movies.Length" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Movies.IsDVD" /> @Html.DisplayNameFor(model => model.Movies.IsDVD)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Movies.IsBluRay" /> @Html.DisplayNameFor(model => model.Movies.IsBluRay)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Movies.CoverPhoto" class="control-label"></label>
                <input asp-for="Movies.CoverPhoto" class="form-control" />
                <span asp-validation-for="Movies.CoverPhoto" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="Movies.DeletedAt" class="control-label"></label>
                <input asp-for="Movies.DeletedAt" class="form-control" />
                <span asp-validation-for="Movies.DeletedAt" class="text-danger"></span>
            </div>*@
            @*<div class="form-group">
                <label asp-for="Movies.CreatedAt" class="control-label"></label>
                <input asp-for="Movies.CreatedAt" class="form-control" />
                <span asp-validation-for="Movies.CreatedAt" class="text-danger"></span>
            </div>*@
        <div class="form-group">
            <label asp-for="Movies.UpdatedAt" class="control-label"></label>
            <input type="hidden" value="@DateTime.Now" asp-for="Movies.UpdatedAt" class="form-control" />
            <span asp-validation-for="Movies.UpdatedAt" class="text-danger"></span>
        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
